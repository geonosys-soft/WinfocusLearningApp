@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-color: #4361ee;
        --primary-light: #e6f0fd;
        --secondary-color: #3f37c9;
        --text-color: #2b2d42;
        --light-gray: #f8f9fa;
        --white: #ffffff;
    }

    body {
        background-color: var(--primary-light);
        background-image: url('https://www.transparenttextures.com/patterns/cubes.png');
        margin: 0;
        padding: 0;
        font-family: 'Poppins', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        color: var(--text-color);
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 20px;
        margin-top: 170px; /* -----margin top-------- */
    }

    .login-card {
        display: flex;
        width: 1200px; 
        max-width: 95%;
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
        border-radius: 20px;
        overflow: hidden;
        height: 700px; 
        position: relative;
    }

    .left-side {
        flex: 1.2;
        padding: 60px;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: var(--white);
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .animation-container {
        position: relative;
        width: 100%;
        height: 300px;
        margin: 0 auto 40px;
        perspective: 1000px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .floating-book {
        width: 200px; 
        height: 200px;
        object-fit: contain;
        position: relative;
        z-index: 3;
        animation: float 6s ease-in-out infinite;
        filter: drop-shadow(0 10px 15px rgba(0,0,0,0.3));
    }

    .floating-elements {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
    }

    .element {
        position: absolute;
        background-size: contain;
        background-repeat: no-repeat;
        opacity: 0.8;
        animation-timing-function: ease-in-out;
        animation-iteration-count: infinite;
    }

    .element-1 {
        width: 70px; 
        height: 70px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><path fill="white" d="M622.34 153.2L343.4 67.5c-15.2-4.67-31.6-4.67-46.79 0L17.66 153.2c-23.54 7.23-23.54 38.36 0 45.59l48.63 14.94c-10.67 13.19-17.23 29.28-17.88 46.9C38.78 266.15 32 276.11 32 288c0 10.78 5.68 19.85 13.86 25.65L20.33 428.53C18.11 438.52 25.71 448 35.94 448h56.11c10.24 0 17.84-9.48 15.62-19.47L82.14 313.65C90.32 307.85 96 298.78 96 288c0-11.57-6.47-21.25-15.66-26.87.76-15.02 3.08-29.31 8.31-42.05l139.12 42.78c7.41 2.28 15.37 2.28 22.78 0l139.12-42.78c5.24 12.74 7.55 27.02 8.31 42.05-9.19 5.61-15.66 15.3-15.66 26.87 0 10.78 5.68 19.85 13.86 25.65l-26.33 115.88c-2.22 9.99 5.38 19.47 15.62 19.47h56.11c10.24 0 17.84-9.48 15.62-19.47l-26.33-115.88C378.32 307.85 384 298.78 384 288c0-11.89-6.78-21.85-16.41-27.37-.65-17.62-7.21-33.71-17.88-46.9l48.63-14.94c23.55-7.24 23.55-38.36 0-45.59zM352.79 315.09c0 1.05-.13 2.05-.38 3.04l-24.17 106.43h-64.47l-24.17-106.43c-.25-.99-.38-1.99-.38-3.04 0-35.76 28.67-64.74 64.02-64.74s64.02 28.98 64.02 64.74z"/></svg>');
        top: 20%;
        left: 20%;
        animation: float-element-1 8s infinite;
    }

    .element-2 {
        width: 50px; 
        height: 50px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path fill="white" d="M272 384c9.6-31.9 29.5-59.1 49.2-86.2l0 0c5.2-7.1 10.4-14.2 15.4-21.4c19.8-28.5 31.4-63 31.4-100.3C368 78.8 289.2 0 192 0S16 78.8 16 176c0 37.3 11.6 71.9 31.4 100.3c5 7.2 10.2 14.3 15.4 21.4l0 0c19.8 27.1 39.7 54.4 49.2 86.2H272zM192 512c44.2 0 80-35.8 80-80V416H112v16c0 44.2 35.8 80 80 80zM112 176c0 8.8-7.2 16-16 16s-16-7.2-16-16c0-61.9 50.1-112 112-112c8.8 0 16 7.2 16 16s-7.2 16-16 16c-44.2 0-80 35.8-80 80z"/></svg>');
        top: 70%;
        left: 80%;
        animation: float-element-2 7s infinite 1s;
    }

    .element-3 {
        width: 60px; 
        height: 60px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="white" d="M248.8 214.9l57.7-100.1C323.3 95.9 336 79.1 336 60.3c0-33.1-28.6-60.3-64-60.3s-64 27.2-64 60.3c0 18.8 12.7 35.6 29.5 54.5l57.7 100.1c-3.3 1.1-6.5 2.4-9.7 3.8l-57.5-99.6c-17.4-19.3-32.1-39.7-32.1-58.8C160 13.9 186.7 0 224 0s64 13.9 64 40.3c0 19.1-14.7 39.5-32.1 58.8L198.3 218.7c-3.2-1.4-6.4-2.7-9.7-3.8l-57.7-100.1c16.8-18.9 29.5-35.7 29.5-54.5C160 27.2 131.4 0 96 0S32 27.2 32 60.3c0 18.8 12.7 35.6 29.5 54.5l57.7 100.1c-3.3 1.1-6.5 2.4-9.7 3.8L29.5 169.5C12.7 150.6 0 133.8 0 115c0-33.1 28.6-60.3 64-60.3V0C28.6 0 0 50.1 0 115s28.6 115 64 115c35.4 0 64-27.2 64-60.3 0-18.8-12.7-35.6-29.5-54.5l57.7-100.1c3.3-1.1 6.5-2.4 9.7-3.8l57.5 99.6c17.4 19.3 32.1 39.7 32.1 58.8c0 26.4-26.7 40.3-64 40.3s-64-13.9-64-40.3c0-19.1 14.7-39.5 32.1-58.8l57.7-100.1c3.2 1.4 6.4 2.7 9.7 3.8zM224 512c35.4 0 64-27.2 64-60.3c0-18.8-12.7-35.6-29.5-54.5l-57.7-100.1c3.3-1.1 6.5-2.4 9.7-3.8l57.5 99.6c17.4 19.3 32.1 39.7 32.1 58.8C320 498.1 293.3 512 256 512h-64c-37.3 0-64-13.9-64-40.3c0-19.1 14.7-39.5 32.1-58.8l57.7-100.1c3.2 1.4 6.4 2.7 9.7 3.8l-57.7 100.1C124.7 416.3 112 433.1 112 451.7c0 33.1 28.6 60.3 64 60.3H224z"/></svg>');
        top: 80%;
        left: 20%;
        animation: float-element-3 9s infinite 0.5s;
    }

    /* Animation keyframes */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(-5deg);
        }

        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    @@keyframes float-element-1 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        25% {
            transform: translate(20px, -30px) rotate(5deg);
        }

        50% {
            transform: translate(40px, 0) rotate(0deg);
        }

        75% {
            transform: translate(20px, 30px) rotate(-5deg);
        }
    }

    @@keyframes float-element-2 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        25% {
            transform: translate(-30px, -20px) rotate(10deg);
        }

        50% {
            transform: translate(-60px, 0) rotate(0deg);
        }

        75% {
            transform: translate(-30px, 20px) rotate(-10deg);
        }
    }

    @@keyframes float-element-3 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }

        25% {
            transform: translate(30px, -15px) rotate(15deg);
        }

        50% {
            transform: translate(0, -30px) rotate(0deg);
        }

        75% {
            transform: translate(-30px, -15px) rotate(-15deg);
        }
    }

    /* Right side styles */
    .right-side {
        flex: 1;
        padding: 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: var(--white);
    }

    .login-form {
        width: 100%;
        max-width: 400px;
    }

    .form-group {
        margin-bottom: 25px;
        width: 100%;
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 15px 20px;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        font-size: 16px;
        transition: all 0.3s ease;
        background-color: var(--light-gray);
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.15);
            background-color: var(--white);
        }

    .password-container {
        position: relative;
    }

    .toggle-password {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 18px;
        color: #adb5bd;
        transition: all 0.2s ease;
    }

        .toggle-password:hover {
            color: var(--primary-color);
        }

    .btn-login {
        width: 100%;
        padding: 16px;
        background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        color: var(--white);
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 20px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(67, 97, 238, 0.4);
        }

    .links {
        margin-top: 25px;
        text-align: center;
    }

        .links a {
            display: block;
            margin: 12px 0;
            color: var(--primary-color);
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: all 0.2s ease;
            position: relative;
        }

            .links a:hover {
                color: var(--secondary-color);
            }

            .links a::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--secondary-color);
                transition: width 0.3s ease;
            }

            .links a:hover::after {
                width: 100%;
            }

    .footer {
        margin-top: 50px;
        text-align: center;
        font-size: 14px;
        color: #6c757d;
    }

        .footer a {
            color: #6c757d;
            text-decoration: none;
            margin: 0 12px;
            transition: all 0.2s ease;
        }

            .footer a:hover {
                color: var(--primary-color);
            }

    h1 {
        font-size: 36px; 
        margin-bottom: 30px;
        font-weight: 700;
        position: relative;
        display: inline-block;
    }

        h1::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px; /* Increased width */
            height: 3px;
            background: rgba(255,255,255,0.5);
            border-radius: 3px;
        }

    h2 {
        font-size: 28px; 
        margin-bottom: 40px;
        font-weight: 600;
        line-height: 1.4;
    }

    .tagline {
        font-size: 20px; 
        line-height: 1.6;
        opacity: 0.9;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-weight: 500;
        color: #495057;
        font-size: 17px; 
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 25px 0;
        color: #adb5bd;
        font-size: 15px; 
    }

        .divider::before, .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e9ecef;
        }

        .divider::before {
            margin-right: 15px;
        }

        .divider::after {
            margin-left: 15px;
        }
</style>

<div class="login-container">
    <div class="login-card">
        <!-- Left Side Content with Animation -->
        <div class="left-side">
            <h1>winfocus</h1>

            <div class="animation-container">
                <img src="https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/svg/1f4d6.svg" alt="Floating Book" class="floating-book">
                <div class="floating-elements">
                    <div class="element element-1"></div>
                    <div class="element element-2"></div>
                    <div class="element element-3"></div>
                </div>
            </div>

            <h2>Elevate Your Learning Experience</h2>
            <p class="tagline">Get personalized guidance from two teachers and instant doubt resolution through our interactive Live Classes platform.</p>
        </div>

        <!-- Right Side Login Form -->
        <div class="right-side">
            <div class="login-form">
                <h2>Welcome Back!</h2>

                <form>
                    <div class="form-group">
                        <label for="username">Email or Username</label>
                        <input type="text" id="username" class="form-control" placeholder="Enter your email or username">
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <div class="password-container">
                            <input type="password" id="password" class="form-control" placeholder="Enter your password">
                            <span class="toggle-password">👁️</span>
                        </div>
                    </div>

                    <button type="submit" class="btn-login">Sign In</button>

                    <div class="divider">or</div>

                    <div class="links">
                        <a href="#">Forgot Password?</a>
                        <a href="#">Register as Student</a>
                        <a href="#">Register as Teacher</a>
                    </div>
                </form>
            </div>

            <div class="footer">
                <a href="#">Help Center</a>
                <a href="#">Privacy Policy</a>
                <a href="#">Terms of Service</a>
            </div>
        </div>
    </div>
</div>

<script>
    // Toggle password visibility with animation
    document.querySelector('.toggle-password').addEventListener('click', function () {
        const passwordInput = document.getElementById('password');
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);

        // Animate eye icon
        this.style.transform = 'translateY(-50%) scale(0.8)';
        setTimeout(() => {
            this.style.transform = 'translateY(-50%) scale(1.1)';
            this.style.color = type === 'password' ? '#adb5bd' : 'var(--primary-color)';
        }, 100);
        setTimeout(() => {
            this.style.transform = 'translateY(-50%) scale(1)';
        }, 200);
    });
</script>