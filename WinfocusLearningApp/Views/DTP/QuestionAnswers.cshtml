                const question = document.getElementById("Question").value;
                const op1 = document.getElementById("Option1").value;
                const op2 = document.getElementById("Option2").value;
                const op3 = document.getElementById("Option3").value;
                const op4 = document.getElementById("Option4").value;
                const answer = document.getElementById("Answer").value;
                const mark = document.getElementById("Mark").value;
                const month = document.getElementById("Month").value;
                const week = document.getElementById("Week").value;
                const questiontype = document.getElementById("QuestionType").value;

                if (!academicYearId || !syllabusId || !classId || !streamId ||
                    !subjectId || !chapterId || !op1 || !op2 || !op3||!op4||!answer||!mark) {
                    showNotification('Please fill all fields', 'error');
                    return;
                }
                const formData = new FormData();
                formData.append("jsonData", JSON.stringify({
                    AccademicYearId: academicYearId,
                    SyllabusID: syllabusId,
                    ClassID: classId,
                    StreamID: streamId,
                    SubjectID: subjectId,
                    ChapterID: chapterId,
                    Question: question,
                    Option1: op1,
                    Option2: op2,
                    Option3: op3,
                    Option4: op4,
                    Answer: answer,
                    Mark: mark,
                    Month: month,
                    Week: week,
                    QuestionType: questiontype,
                    ID: id
                }));
                formData.append("file", document.getElementById("fileupload").files[0]);

                try {
                    if (id == 0) {
                        const response = await fetch("/api/QA/AddQuestion", {
                            method: "POST",
                            body: formData
                        });

                        if (!response.ok) {
                            message = 'Error for adding Question';
                            showNotification(message, 'error');
                            throw new Error('Failed to add module');

                        }
                        else {
                            message = `Question added successfully!`;
                            showNotification(message, 'success');
                        }
                        formClear2();
                    }
                    else {
                        const response = await fetch("/api/QA/UpdateQuestion", {
                            method: "POST",
                            body: formData
                        });

                        if (!response.ok) {
                            message = 'Error for adding Question';
                            showNotification(message, 'error');
                            throw new Error('Failed to add module');

                        }
                        else {
                            message = `Question updated successfully!`;
                            showNotification(message, 'success');
                        }
                        formClear();
                    }




                    // Clear form

                } catch (error) {
                    showNotification('Failed to add module', 'error');
                    console.error('Error adding module:', error);
                }
                break;


        }
    }

    // Show notification function
    function showNotification(message, type) {
        const notification = document.getElementById('notification');
        const notificationIcon = notification.querySelector('.notification-icon');
        const notificationMsg = notification.querySelector('.notification-message');

        // Clear previous classes
        notification.className = 'floating-notification';
        notification.classList.add('show', `notification-${type}`);

        // Set icon and message
        if (type === 'success') {
            notificationIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
            notificationIcon.style.color = '#4cc9f0';
        } else {
            notificationIcon.innerHTML = '<i class="fas fa-exclamation-circle"></i>';
            notificationIcon.style.color = '#f72585';
        }

        notificationMsg.textContent = message;

        // Auto hide after 5 seconds
        setTimeout(() => {
            notification.classList.remove('show');
        }, 5000);
    }

    // Close notification when clicked
    document.getElementById('notification').addEventListener('click', function () {
        this.classList.remove('show');
    });

    // Add cascading dropdown functionality
    document.addEventListener('DOMContentLoaded', function () {
        // Trigger change immediately if there is already a selected Academic Year
        if ($('#AccademicYearId').val()) {
