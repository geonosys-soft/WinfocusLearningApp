<script>
    // Show form function
    function showForm(formType) {
        // Hide all forms first
        document.querySelectorAll('.form-container').forEach(form => {
            form.style.display = 'none';
        });

        // Show the selected form
        const form = document.getElementById(formType + '-form');
        form.style.display = 'block';

        // Load data for the form
        loadFormData(formType);

        // Scroll to form
        form.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }

    // Hide form function
    function hideForm(formType) {
        document.getElementById(formType + '-form').style.display = 'none';
        document.getElementById('insert-form').style.display = 'block';
    }

    // Load data for forms
    async function loadFormData(formType) {
        try {
            // Load academic years
            const academicYears = await fetchDropdownData('/api/ManagementApi/FetchAccademicYear');
            populateDropdown('insert-academic-year', academicYears);
            populateDropdown('edit-academic-year', academicYears);
            populateDropdown('delete-academic-year', academicYears);

            // Load other dropdowns as needed (syllabus, class, stream, course, subject)
            // You'll need to implement these API endpoints
            const syllabuses = await fetchDropdownData('/api/ManagementApi/FetchSyllabus');
            populateDropdown('insert-syllabus', syllabuses);
            populateDropdown('edit-syllabus', syllabuses);
            populateDropdown('delete-syllabus', syllabuses);

            const classes = await fetchDropdownData('/api/ManagementApi/FetchClass');
            populateDropdown('insert-class', classes);
            populateDropdown('edit-class', classes);
            populateDropdown('delete-class', classes);

            const streams = await fetchDropdownData('/api/ManagementApi/FetchStream');
            populateDropdown('insert-stream', streams);
            populateDropdown('edit-stream', streams);
            populateDropdown('delete-stream', streams);

            const courses = await fetchDropdownData('/api/ManagementApi/FetchCourse');
            populateDropdown('insert-course', courses);
            populateDropdown('edit-course', courses);
            populateDropdown('delete-course', courses);

            const subjects = await fetchDropdownData('/api/ManagementApi/FetchSubject');
            populateDropdown('insert-subject', subjects);
            populateDropdown('edit-subject', subjects);
            populateDropdown('delete-subject', subjects);

            // For edit and delete forms, load note types
            if (formType === 'edit' || formType === 'delete') {
                const noteTypes = await fetchDropdownData('/api/ManagementApi/FetchNoteTypes');
                populateDropdown(formType + '-note-type' + (formType === 'edit' ? '-select' : ''), noteTypes);
            }

        } catch (error) {
            showNotification('Error loading form data', 'error');
            console.error('Error loading form data:', error);
        }
    }

    // Helper function to fetch dropdown data
    async function fetchDropdownData(url) {
        const response = await fetch(url);
        if (!response.ok) throw new Error('Failed to fetch data');
        return await response.json();
    }

    // Helper function to populate dropdown
    function populateDropdown(dropdownId, data) {
        const dropdown = document.getElementById(dropdownId);
        if (!dropdown) return;

        // Clear previous options except the first one
        while (dropdown.options.length > 1) {
            dropdown.remove(1);
        }

        // Add new options
        data.forEach(item => {
            const option = document.createElement('option');
            option.value = item.Id;
            option.textContent = item.Name || item.AccademicYear || item.Title; // Adjust based on your data structure
            dropdown.appendChild(option);
        });
    }

    // Delete confirmation toggle
    document.getElementById('confirm-delete').addEventListener('change', function() {
        document.querySelector('#delete-form .btn').disabled = !this.checked;
    });

    // Submit form function
    async function submitForm(formType) {
        const notification = document.getElementById('notification');
        let message;

        try {
            switch (formType) {
                case 'insert':
                    // Get all form values
                    const academicYearId = document.getElementById('insert-academic-year').value;
                    const syllabusId = document.getElementById('insert-syllabus').value;
                    const classId = document.getElementById('insert-class').value;
                    const streamId = document.getElementById('insert-stream').value;
                    const courseId = document.getElementById('insert-course').value;
                    const subjectId = document.getElementById('insert-subject').value;
                    const noteType = document.getElementById('insert-note-type').value.trim();

                    // Validate
                    if (!academicYearId || !syllabusId || !classId || !streamId || !courseId || !subjectId || !noteType) {
                        showNotification('Please fill all fields', 'error');
                        return;
                    }

                    // Submit data
                    const response = await fetch('/api/ManagementApi/AddNoteType', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            AcademicYearId: academicYearId,
                            SyllabusId: syllabusId,
                            ClassId: classId,
                            StreamId: streamId,
                            CourseId: courseId,
                            SubjectId: subjectId,
                            NoteType: noteType
                        })
                    });

                    if (!response.ok) throw new Error('Failed to add note type');

                    message = 'Note type added successfully!';
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('insert-note-type').value = '';
                    break;

                case 'edit':
                    const editAcademicYearId = document.getElementById('edit-academic-year').value;
                    const editSyllabusId = document.getElementById('edit-syllabus').value;
                    const editClassId = document.getElementById('edit-class').value;
                    const editStreamId = document.getElementById('edit-stream').value;
                    const editCourseId = document.getElementById('edit-course').value;
                    const editSubjectId = document.getElementById('edit-subject').value;
                    const noteTypeId = document.getElementById('edit-note-type-select').value;
                    const newNoteType = document.getElementById('edit-new-note-type').value.trim();

                    if (!editAcademicYearId || !editSyllabusId || !editClassId || !editStreamId ||
                        !editCourseId || !editSubjectId || !noteTypeId || !newNoteType) {
                        showNotification('Please fill all fields', 'error');
                        return;
                    }

                    const editResponse = await fetch('/api/ManagementApi/UpdateNoteType', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            Id: noteTypeId,
                            AcademicYearId: editAcademicYearId,
                            SyllabusId: editSyllabusId,
                            ClassId: editClassId,
                            StreamId: editStreamId,
                            CourseId: editCourseId,
                            SubjectId: editSubjectId,
                            NoteType: newNoteType
                        })
                    });

                    if (!editResponse.ok) throw new Error('Failed to update note type');

                    message = 'Note type updated successfully!';
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('edit-new-note-type').value = '';
                    hideForm('edit');
                    break;

                case 'delete':
                    const deleteNoteTypeId = document.getElementById('delete-note-type').value;

                    if (!deleteNoteTypeId) {
                        showNotification('Please select a note type to delete', 'error');
                        return;
                    }

                    const deleteResponse = await fetch('/api/ManagementApi/DeleteNoteType', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ Id: deleteNoteTypeId })
                    });

                    if (!deleteResponse.ok) throw new Error('Failed to delete note type');

                    message = 'Note type deleted successfully!';
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('delete-note-type').value = '';
                    document.getElementById('confirm-delete').checked = false;
                    document.querySelector('#delete-form .btn').disabled = true;
                    hideForm('delete');
                    break;
            }
        } catch (error) {
            showNotification(error.message || 'Something went wrong', 'error');
            console.error('Error submitting form:', error);
        }
    }

    // Show notification function
    function showNotification(message, type) {
        const notification = document.getElementById('notification');
        const notificationIcon = notification.querySelector('.notification-icon');
        const notificationMsg = notification.querySelector('.notification-message');

        // Clear previous classes
        notification.className = 'floating-notification';
        notification.classList.add('show', `notification-${type}`);

        // Set icon and message
        if (type === 'success') {
            notificationIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
            notificationIcon.style.color = '#4cc9f0';
        } else {
            notificationIcon.innerHTML = '<i class="fas fa-exclamation-circle"></i>';
            notificationIcon.style.color = '#f72585';
        }

        notificationMsg.textContent = message;

        // Auto hide after 5 seconds
        setTimeout(() => {
            notification.classList.remove('show');
        }, 5000);
    }

    // Close notification when clicked
    document.getElementById('notification').addEventListener('click', function() {
        this.classList.remove('show');
    });

