<script>
    // Show form function
    function showForm(formType) {
        // Hide all forms first
        document.querySelectorAll('.form-container').forEach(form => {
            form.style.display = 'none';
        });

        // Show the selected form
        const form = document.getElementById(formType + '-form');
        form.style.display = 'block';

        // Load initial data
        loadAcademicYears();
        loadStreams();
        loadClasses();
        loadCourses();

        if (formType === 'edit' || formType === 'delete') {
            // Additional setup for edit/delete forms
            setupSubjectDropdowns();
        }

        // Scroll to form
        form.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }

    // Hide form function
    function hideForm(formType) {
        document.getElementById(formType + '-form').style.display = 'none';
        document.getElementById('insert-form').style.display = 'block';
    }

    // Delete confirmation toggle
    document.getElementById('confirm-delete').addEventListener('change', function () {
        document.querySelector('#delete-form .btn').disabled = !this.checked;
    });

    // Load academic years from database
    async function loadAcademicYears() {
        try {
            const response = await fetch('/api/ManagementApi/FetchAccademicYear');
            if (!response.ok) throw new Error('Failed to fetch academic years');

            const data = await response.json();

            // Populate academic year dropdowns
            const yearDropdowns = [
                'academic-year',
                'edit-academic-year',
                'delete-academic-year'
            ];

            yearDropdowns.forEach(dropdownId => {
                const dropdown = document.getElementById(dropdownId);
                dropdown.innerHTML = '<option value="">-- Select Academic Year --</option>';

                data.forEach(year => {
                    const option = document.createElement('option');
                    option.value = year.Id;
                    option.textContent = year.AccademicYear;
                    dropdown.appendChild(option);
                });
            });
        } catch (error) {
            console.error('Error loading academic years:', error);
            showNotification('Failed to load academic years', 'error');
        }
    }

    // Load streams from database
    async function loadStreams() {
        try {
            const response = await fetch('/api/ManagementApi/FetchStreams');
            if (!response.ok) throw new Error('Failed to fetch streams');

            const data = await response.json();

            // Populate stream dropdowns
            const streamDropdowns = [
                'stream',
                'edit-stream',
                'delete-stream'
            ];

            streamDropdowns.forEach(dropdownId => {
                const dropdown = document.getElementById(dropdownId);
                dropdown.innerHTML = '<option value="">-- Select Stream --</option>';

                data.forEach(stream => {
                    const option = document.createElement('option');
                    option.value = stream.Id;
                    option.textContent = stream.StreamName;
                    dropdown.appendChild(option);
                });
            });
        } catch (error) {
            console.error('Error loading streams:', error);
            showNotification('Failed to load streams', 'error');
        }
    }

    // Load classes from database
    async function loadClasses() {
        try {
            const response = await fetch('/api/ManagementApi/FetchClasses');
            if (!response.ok) throw new Error('Failed to fetch classes');

            const data = await response.json();

            // Populate class dropdowns
            const classDropdowns = [
                'class',
                'edit-class',
                'delete-class'
            ];

            classDropdowns.forEach(dropdownId => {
                const dropdown = document.getElementById(dropdownId);
                dropdown.innerHTML = '<option value="">-- Select Class --</option>';

                data.forEach(cls => {
                    const option = document.createElement('option');
                    option.value = cls.Id;
                    option.textContent = cls.ClassName;
                    dropdown.appendChild(option);
                });
            });
        } catch (error) {
            console.error('Error loading classes:', error);
            showNotification('Failed to load classes', 'error');
        }
    }

    // Load courses from database
    async function loadCourses() {
        try {
            const response = await fetch('/api/ManagementApi/FetchCourses');
            if (!response.ok) throw new Error('Failed to fetch courses');

            const data = await response.json();

            // Populate course dropdowns
            const courseDropdowns = [
                'course',
                'edit-course',
                'delete-course'
            ];

            courseDropdowns.forEach(dropdownId => {
                const dropdown = document.getElementById(dropdownId);
                dropdown.innerHTML = '<option value="">-- Select Course --</option>';

                data.forEach(course => {
                    const option = document.createElement('option');
                    option.value = course.Id;
                    option.textContent = course.CourseName;
                    dropdown.appendChild(option);
                });
            });
        } catch (error) {
            console.error('Error loading courses:', error);
            showNotification('Failed to load courses', 'error');
        }
    }

    // Load syllabi when academic year is selected
    function setupSyllabusDropdowns() {
        // For insert form
        document.getElementById('academic-year').addEventListener('change', async function() {
            const yearId = this.value;
            if (!yearId) return;

            try {
                const response = await fetch(`/api/SyllabusApi/GetSyllabusByYear?yearId=${yearId}`);
                if (!response.ok) throw new Error('Failed to fetch syllabi');

                const syllabi = await response.json();
                const dropdown = document.getElementById('syllabus');
                dropdown.innerHTML = '<option value="">-- Select Syllabus --</option>';

                syllabi.forEach(syllabus => {
                    const option = document.createElement('option');
                    option.value = syllabus.Id;
                    option.textContent = syllabus.Title || syllabus.Content.substring(0, 50) + '...';
                    dropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading syllabi:', error);
                showNotification('Failed to load syllabi', 'error');
            }
        });

        // For edit form
        document.getElementById('edit-academic-year').addEventListener('change', async function() {
            const yearId = this.value;
            if (!yearId) return;

            try {
                const response = await fetch(`/api/SyllabusApi/GetSyllabusByYear?yearId=${yearId}`);
                if (!response.ok) throw new Error('Failed to fetch syllabi');

                const syllabi = await response.json();
                const dropdown = document.getElementById('edit-syllabus');
                dropdown.innerHTML = '<option value="">-- Select Syllabus --</option>';

                syllabi.forEach(syllabus => {
                    const option = document.createElement('option');
                    option.value = syllabus.Id;
                    option.textContent = syllabus.Title || syllabus.Content.substring(0, 50) + '...';
                    dropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading syllabi:', error);
                showNotification('Failed to load syllabi', 'error');
            }
        });

        // For delete form
        document.getElementById('delete-academic-year').addEventListener('change', async function() {
            const yearId = this.value;
            if (!yearId) return;

            try {
                const response = await fetch(`/api/SyllabusApi/GetSyllabusByYear?yearId=${yearId}`);
                if (!response.ok) throw new Error('Failed to fetch syllabi');

                const syllabi = await response.json();
                const dropdown = document.getElementById('delete-syllabus');
                dropdown.innerHTML = '<option value="">-- Select Syllabus --</option>';

                syllabi.forEach(syllabus => {
                    const option = document.createElement('option');
                    option.value = syllabus.Id;
                    option.textContent = syllabus.Title || syllabus.Content.substring(0, 50) + '...';
                    dropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading syllabi:', error);
                showNotification('Failed to load syllabi', 'error');
            }
        });
    }

    // Setup subject dropdowns for edit and delete forms
    function setupSubjectDropdowns() {
        // For edit form
        document.getElementById('edit-course').addEventListener('change', async function() {
            const courseId = this.value;
            if (!courseId) return;

            try {
                const response = await fetch(`/api/SubjectApi/GetSubjectsByCourse?courseId=${courseId}`);
                if (!response.ok) throw new Error('Failed to fetch subjects');

                const subjects = await response.json();
                const dropdown = document.getElementById('edit-subject-select');
                dropdown.innerHTML = '<option value="">-- Select Subject --</option>';

                subjects.forEach(subject => {
                    const option = document.createElement('option');
                    option.value = subject.Id;
                    option.textContent = subject.SubjectName;
                    dropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading subjects:', error);
                showNotification('Failed to load subjects', 'error');
            }
        });

        // For delete form
        document.getElementById('delete-course').addEventListener('change', async function() {
            const courseId = this.value;
            if (!courseId) return;

            try {
                const response = await fetch(`/api/SubjectApi/GetSubjectsByCourse?courseId=${courseId}`);
                if (!response.ok) throw new Error('Failed to fetch subjects');

                const subjects = await response.json();
                const dropdown = document.getElementById('delete-subject-select');
                dropdown.innerHTML = '<option value="">-- Select Subject --</option>';

                subjects.forEach(subject => {
                    const option = document.createElement('option');
                    option.value = subject.Id;
                    option.textContent = subject.SubjectName;
                    dropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading subjects:', error);
                showNotification('Failed to load subjects', 'error');
            }
        });

        // Load subject details when selected in edit form
        document.getElementById('edit-subject-select').addEventListener('change', async function() {
            const subjectId = this.value;
            if (!subjectId) return;

            try {
                const response = await fetch(`/api/SubjectApi/GetSubjectById?id=${subjectId}`);
                if (!response.ok) throw new Error('Failed to fetch subject details');

                const subject = await response.json();
                document.getElementById('edit-subject-name').value = subject.SubjectName;
            } catch (error) {
                console.error('Error loading subject details:', error);
                showNotification('Failed to load subject details', 'error');
            }
        });
    }

    // Submit form function
    async function submitForm(formType) {
        const notification = document.getElementById('notification');
        const notificationIcon = notification.querySelector('.notification-icon');
        const notificationMsg = notification.querySelector('.notification-message');
        let message;

        try {
            switch (formType) {
                case 'insert':
                    const yearId = document.getElementById('academic-year').value;
                    const syllabusId = document.getElementById('syllabus').value;
                    const streamId = document.getElementById('stream').value;
                    const classId = document.getElementById('class').value;
                    const courseId = document.getElementById('course').value;
                    const subjectName = document.getElementById('subject-name').value.trim();

                    if (!yearId || !syllabusId || !streamId || !classId || !courseId || !subjectName) {
                        showNotification('Please fill all fields', 'error');
                        return;
                    }

                    const insertResponse = await fetch('/api/SubjectApi/AddSubject', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            AcademicYearId: yearId,
                            SyllabusId: syllabusId,
                            StreamId: streamId,
                            ClassId: classId,
                            CourseId: courseId,
                            SubjectName: subjectName
                        })
                    });

                    if (!insertResponse.ok) throw new Error('Failed to add subject');

                    message = 'Subject added successfully!';
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('academic-year').value = '';
                    document.getElementById('syllabus').value = '';
                    document.getElementById('stream').value = '';
                    document.getElementById('class').value = '';
                    document.getElementById('course').value = '';
                    document.getElementById('subject-name').value = '';
                    break;

                case 'edit':
                    const editYearId = document.getElementById('edit-academic-year').value;
                    const editSyllabusId = document.getElementById('edit-syllabus').value;
                    const editStreamId = document.getElementById('edit-stream').value;
                    const editClassId = document.getElementById('edit-class').value;
                    const editCourseId = document.getElementById('edit-course').value;
                    const subjectId = document.getElementById('edit-subject-select').value;
                    const newSubjectName = document.getElementById('edit-subject-name').value.trim();

                    if (!editYearId || !editSyllabusId || !editStreamId || !editClassId || !editCourseId || !subjectId || !newSubjectName) {
                        showNotification('Please fill all fields', 'error');
                        return;
                    }

                    const editResponse = await fetch('/api/SubjectApi/UpdateSubject', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            Id: subjectId,
                            AcademicYearId: editYearId,
                            SyllabusId: editSyllabusId,
                            StreamId: editStreamId,
                            ClassId: editClassId,
                            CourseId: editCourseId,
                            SubjectName: newSubjectName
                        })
                    });

                    if (!editResponse.ok) throw new Error('Failed to update subject');

                    message = 'Subject updated successfully!';
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('edit-academic-year').value = '';
                    document.getElementById('edit-syllabus').value = '';
                    document.getElementById('edit-stream').value = '';
                    document.getElementById('edit-class').value = '';
                    document.getElementById('edit-course').value = '';
                    document.getElementById('edit-subject-select').value = '';
                    document.getElementById('edit-subject-name').value = '';
                    hideForm('edit');
                    break;

                case 'delete':
                    const deleteSubjectId = document.getElementById('delete-subject-select').value;

                    if (!deleteSubjectId) {
                        showNotification('Please select a subject to delete', 'error');
                        return;
                    }

                    const deleteResponse = await fetch('/api/SubjectApi/DeleteSubject', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            Id: deleteSubjectId
                        })
                    });

                    if (!deleteResponse.ok) throw new Error('Failed to delete subject');

                    message = 'Subject deleted successfully!';
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('delete-academic-year').value = '';
                    document.getElementById('delete-syllabus').value = '';
                    document.getElementById('delete-stream').value = '';
                    document.getElementById('delete-class').value = '';
                    document.getElementById('delete-course').value = '';
                    document.getElementById('delete-subject-select').value = '';
                    document.getElementById('confirm-delete').checked = false;
                    document.querySelector('#delete-form .btn').disabled = true;
                    hideForm('delete');
                    break;
            }
        } catch (error) {
            console.error(`Error in ${formType} operation:`, error);
            showNotification(`Failed to ${formType} subject`, 'error');
        }
    }

    // Show notification function
    function showNotification(message, type) {
        const notification = document.getElementById('notification');
        const notificationIcon = notification.querySelector('.notification-icon');
        const notificationMsg = notification.querySelector('.notification-message');

        // Clear previous classes
        notification.className = 'floating-notification';
        notification.classList.add('show', `notification-${type}`);

        // Set icon and message
        if (type === 'success') {
            notificationIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
            notificationIcon.style.color = '#4cc9f0';
        } else {
            notificationIcon.innerHTML = '<i class="fas fa-exclamation-circle"></i>';
            notificationIcon.style.color = '#f72585';
        }

        notificationMsg.textContent = message;

        // Auto hide after 5 seconds
        setTimeout(() => {
            notification.classList.remove('show');
        }, 5000);
    }

    // Close notification when clicked
    document.getElementById('notification').addEventListener('click', function () {
        this.classList.remove('show');
    });

    // Initialize the page
    document.addEventListener('DOMContentLoaded', function() {
        setupSyllabusDropdowns();
    });
</script>