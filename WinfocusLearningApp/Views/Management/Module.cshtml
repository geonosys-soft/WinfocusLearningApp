<script>
    // Show form function
    function showForm(formType) {
        // Hide all forms first
        document.querySelectorAll('.form-container').forEach(form => {
            form.style.display = 'none';
        });

        // Show the selected form
        const form = document.getElementById(formType + '-form');
        form.style.display = 'block';

        // Load data for the form
        loadDropdownData(formType);

        // Scroll to form
        form.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }

    // Hide form function
    function hideForm(formType) {
        document.getElementById(formType + '-form').style.display = 'none';
        document.getElementById('insert-form').style.display = 'block';
    }

    // Delete confirmation toggle
    document.getElementById('confirm-delete').addEventListener('change', function() {
        document.querySelector('#delete-form .btn').disabled = !this.checked;
    });

    // Load dropdown data from database
    async function loadDropdownData(formType) {
        try {
            // Fetch academic years
            const academicYears = await fetch('/api/ManagementApi/FetchAccademicYear').then(res => res.json());
            populateDropdown(`${formType}-academic-year`, academicYears);

            // Fetch syllabuses
            const syllabuses = await fetch('/api/ManagementApi/FetchSyllabus').then(res => res.json());
            populateDropdown(`${formType}-syllabus`, syllabuses);

            // Fetch classes
            const classes = await fetch('/api/ManagementApi/FetchClass').then(res => res.json());
            populateDropdown(`${formType}-class`, classes);

            // Fetch streams
            const streams = await fetch('/api/ManagementApi/FetchStream').then(res => res.json());
            populateDropdown(`${formType}-stream`, streams);

            // Fetch courses
            const courses = await fetch('/api/ManagementApi/FetchCourse').then(res => res.json());
            populateDropdown(`${formType}-course`, courses);

            // Fetch subjects
            const subjects = await fetch('/api/ManagementApi/FetchSubject').then(res => res.json());
            populateDropdown(`${formType}-subject`, subjects);

            // Fetch chapters
            const chapters = await fetch('/api/ManagementApi/FetchChapter').then(res => res.json());
            populateDropdown(`${formType}-chapter`, chapters);

            // Fetch subchapters
            const subchapters = await fetch('/api/ManagementApi/FetchSubChapter').then(res => res.json());
            populateDropdown(`${formType}-subchapter`, subchapters);

            // For edit and delete forms, also load modules
            if (formType === 'edit' || formType === 'delete') {
                const modules = await fetch('/api/ManagementApi/FetchModule').then(res => res.json());
                populateDropdown(`${formType}-module`, modules);
            }
        } catch (error) {
            showNotification('Error loading dropdown data', 'error');
            console.error('Error loading dropdown data:', error);
        }
    }

    // Helper function to populate dropdown
    function populateDropdown(dropdownId, data) {
        const dropdown = document.getElementById(dropdownId);
        if (!dropdown) return;

        // Clear previous options
        dropdown.innerHTML = '<option value="">-- Select --</option>';

        // Add new options
        data.forEach(item => {
            const option = document.createElement('option');
            option.value = item.Id;
            option.textContent = item.Name || item.AccademicYear || item.ModuleName; // Adjust based on your data structure
            dropdown.appendChild(option);
        });
    }

    // Submit form function
    async function submitForm(formType) {
        let moduleName, message;
        const notification = document.getElementById('notification');
        const notificationIcon = notification.querySelector('.notification-icon');
        const notificationMsg = notification.querySelector('.notification-message');

        switch (formType) {
            case 'insert':
                // Get all selected values
                const academicYearId = document.getElementById('insert-academic-year').value;
                const syllabusId = document.getElementById('insert-syllabus').value;
                const classId = document.getElementById('insert-class').value;
                const streamId = document.getElementById('insert-stream').value;
                const courseId = document.getElementById('insert-course').value;
                const subjectId = document.getElementById('insert-subject').value;
                const chapterId = document.getElementById('insert-chapter').value;
                const subchapterId = document.getElementById('insert-subchapter').value;
                moduleName = document.getElementById('insert-module').value.trim();

                if (!academicYearId || !syllabusId || !classId || !streamId ||
                    !courseId || !subjectId || !chapterId || !subchapterId || !moduleName) {
                    showNotification('Please fill all fields', 'error');
                    return;
                }

                try {
                    const response = await fetch("/api/ManagementApi/AddModule", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            AcademicYearId: academicYearId,
                            SyllabusId: syllabusId,
                            ClassId: classId,
                            StreamId: streamId,
                            CourseId: courseId,
                            SubjectId: subjectId,
                            ChapterId: chapterId,
                            SubChapterId: subchapterId,
                            ModuleName: moduleName
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Failed to add module');
                    }

                    message = `Module "${moduleName}" added successfully!`;
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('insert-module').value = '';
                } catch (error) {
                    showNotification('Failed to add module', 'error');
                    console.error('Error adding module:', error);
                }
                break;

            case 'edit':
                const moduleId = document.getElementById('edit-module-select').value;
                moduleName = document.getElementById('edit-new-module').value.trim();

                if (!moduleId || !moduleName) {
                    showNotification('Please select a module and enter a new name', 'error');
                    return;
                }

                try {
                    const response = await fetch("/api/ManagementApi/UpdateModule", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            Id: moduleId,
                            ModuleName: moduleName
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Failed to update module');
                    }

                    const moduleSelect = document.getElementById("edit-module-select");
                    const selectedModuleText = moduleSelect.options[moduleSelect.selectedIndex].text;
                    message = `Module changed from "${selectedModuleText}" to "${moduleName}"`;
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('edit-module-select').value = '';
                    document.getElementById('edit-new-module').value = '';
                    hideForm('edit');
                } catch (error) {
                    showNotification('Failed to update module', 'error');
                    console.error('Error updating module:', error);
                }
                break;

            case 'delete':
                const deleteModuleId = document.getElementById('delete-module').value;

                if (!deleteModuleId) {
                    showNotification('Please select a module to delete', 'error');
                    return;
                }

                try {
                    const response = await fetch("/api/ManagementApi/DeleteModule", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            Id: deleteModuleId
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Failed to delete module');
                    }

                    const moduleSelect = document.getElementById("delete-module");
                    const selectedModuleText = moduleSelect.options[moduleSelect.selectedIndex].text;
                    message = `Module "${selectedModuleText}" deleted successfully!`;
                    showNotification(message, 'success');

                    // Clear form
                    document.getElementById('delete-module').value = '';
                    document.getElementById('confirm-delete').checked = false;
                    document.querySelector('#delete-form .btn').disabled = true;
                    hideForm('delete');
                } catch (error) {
                    showNotification('Failed to delete module', 'error');
                    console.error('Error deleting module:', error);
                }
                break;
        }
    }

    // Show notification function
    function showNotification(message, type) {
        const notification = document.getElementById('notification');
        const notificationIcon = notification.querySelector('.notification-icon');
        const notificationMsg = notification.querySelector('.notification-message');

        // Clear previous classes
        notification.className = 'floating-notification';
        notification.classList.add('show', `notification-${type}`);

        // Set icon and message
        if (type === 'success') {
            notificationIcon.innerHTML = '<i class="fas fa-check-circle"></i>';
            notificationIcon.style.color = '#4cc9f0';
        } else {
            notificationIcon.innerHTML = '<i class="fas fa-exclamation-circle"></i>';
            notificationIcon.style.color = '#f72585';
        }

        notificationMsg.textContent = message;

        // Auto hide after 5 seconds
        setTimeout(() => {
            notification.classList.remove('show');
        }, 5000);
    }

    // Close notification when clicked
    document.getElementById('notification').addEventListener('click', function() {
        this.classList.remove('show');
    });

    // Add cascading dropdown functionality
    document.addEventListener('DOMContentLoaded', function() {
        // You would add event listeners here for cascading dropdowns
        // For example, when academic year changes, filter syllabuses, etc.
        // This would depend on your specific API endpoints and data structure
    });
</script>