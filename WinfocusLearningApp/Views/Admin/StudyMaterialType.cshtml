                                                    <div class="form-group">
                                                        <label class="form-control-label">Class</label>
                                                        @Html.DropDownList("SyllabusID", null, "Select AccademicYear", htmlAttributes: new { @class = "form-select" })
                                                        <label id="PgmId-error" class="error" for="PgmId" style="display:none;"></label>
                                                    </div>
                                                </div>
                                                <div class="col col-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Class</label>
                                                        @Html.DropDownList("GradeID", null, "Select AccademicYear", htmlAttributes: new { @class = "form-select" })
                                                        <label id="PgmId-error" class="error" for="PgmId" style="display:none;"></label>
                                                    </div>
                                                </div>
                                                <div class="col col-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Class</label>
                                                        @Html.DropDownList("StreamID", null, "Select AccademicYear", htmlAttributes: new { @class = "form-select" })
                                                        <label id="PgmId-error" class="error" for="PgmId" style="display:none;"></label>
                                                    </div>
                                                </div>
                                                <div class="col col-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Class</label>
                                                        @Html.DropDownList("CourseID", null, "Select AccademicYear", htmlAttributes: new { @class = "form-select" })
                                                        <label id="PgmId-error" class="error" for="PgmId" style="display:none;"></label>
                                                    </div>
                                                </div>
                                                <div class="col col-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Class</label>
                                                        @Html.DropDownList("SubjectId", null, "Select AccademicYear", htmlAttributes: new { @class = "form-select" })
                                                        <label id="PgmId-error" class="error" for="PgmId" style="display:none;"></label>
                                                    </div>
                                                </div>

                                                <div class="col col-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Subject</label>




                                                    </div>
                                                </div>
