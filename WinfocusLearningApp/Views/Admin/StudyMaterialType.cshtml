        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="row align-items-center">
                    <div class="col">
                        <span class="surtitle">Admin account</span>
                        <h1 class="h2 mb-0">Material Management</h1>
                    </div>
                </div>
                <div class="row align-items-center mt-4">
                    <div class="col">
                        <ul class="nav nav-tabs overflow-x">
                            <li class="nav-item">
                                <a href="" class="nav-link">xxxx</a>
                            </li>
                          
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="slice slice-sm bg-section-secondary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <div class="mb-5">

                            @if (ViewBag.StatusMessage != null)
                            {
                                <div class="alert alert-outline-success" role="alert">
                                    <strong>@ViewBag.StatusMessage</strong>
                                </div>}

                            @if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-outline-danger" role="alert">
                                    <strong>@ViewBag.ErrorMessage</strong>
                                </div>}

                            <div class="card">
                                <div class="card-header">
                                    <h5 class="h6 mb-0">Note Type Management</h5>
                                    <p class="text-sm mb-0">You can add,edit and delete Note type here</p>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">

                                        <form id="Material" method="post">
                                            @Html.AntiForgeryToken()
                                            @Html.HiddenFor(model => Model.Id)
                                            <div class="row mx-n2">
                                                <div class="col col-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Class</label>
                                                        @Html.DropDownList("ACID", null, "Select AccademicYear", htmlAttributes: new { @class = "form-select" })
