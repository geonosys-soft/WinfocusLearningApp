                                                </div>
                                                <div class="col col-lg px-2">
                                                    <div class="form-group">

                                                    </div>
                                                    <label id="Name-error" class="error" for="NoteType" style="display:none;"></label>
                                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-auto px-2">

                                                    @if (Model.Id != 0)
                                                    {
                                                        <button type="submit" class="btn btn-secondary px-3" data-toggle="tooltip" data-placement="top" title="Update Note Type">
                                                            <i data-feather="upload"></i>
                                                        </button>

                                                        <a href="NoteType" class="btn btn-danger px-3" data-toggle="tooltip" data-placement="top" title="Cancel">
