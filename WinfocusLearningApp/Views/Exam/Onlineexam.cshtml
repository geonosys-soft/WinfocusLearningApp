@{
    ViewBag.Title = "Onlineexam";
    Layout = "~/Views/Shared/_LayoutExam.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>National Testing Agency - Exam</title>

    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

    <style>
        :root {
            --light-gray-bg: #f0f2f5;
            --white-bg: #ffffff;
            --border-color: #dee2e6;
            --text-color: #212529;
            --timer-blue: #0d6efd;
            --not-visited-bg: #f8f9fa;
            --not-visited-text: #6c757d;
            --not-answered-bg: #dc3545;
            --answered-bg: #198754;
            --marked-review-bg: #6f42c1;
            --save-mark-review-bg: #fd7e14;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            background-color: var(--light-gray-bg);
            color: var(--text-color);
            font-size: 16px;
        }

        .exam-wrapper {
            max-width: 1600px;
            margin: 0 auto;
        }

        .exam-header {
            background-color: var(--white-bg);
            border-bottom: 1px solid var(--border-color);
        }

        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 30px;
        }

        .header-logo-group {
            display: flex;
            align-items: center;
            gap: 25px;
        }

            .header-logo-group .logo {
                height: 60px;
            }

        /* -- HEADER STYLES START --- */
        .header-center {
            text-align: center;
            padding: 10px 0;
        }

            .header-center .ministry-text {
                font-weight: bold;
                font-size: 2.8em; 
            }

            .header-center div:not(.ministry-text) {
                font-size: 1.2em; 
            }
        /* ---  HEADER STYLES END --- */

        .home-button {
            background-color: var(--white-bg);
            border: 1px solid #ccc;
            padding: 6px 18px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
        }

        .exam-container {
            display: flex;
            padding: 25px;
            gap: 25px;
        }

        .question-section {
            flex: 3;
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .sidebar {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 25px;
        }

        .card {
            background-color: var(--white-bg);
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 0 12px rgba(0,0,0,0.05);
        }

        .candidate-info {
            display: flex;
            align-items: center;
            gap: 25px;
        }

        .candidate-avatar {
            font-size: 5.5em;
            color: #e0e0e0;
        }

        .candidate-details table td {
            padding: 5px 0;
            font-size: 1.1em;
        }

            .candidate-details table td:first-child {
                font-weight: bold;
                padding-right: 12px;
            }

        .timer {
            background-color: var(--timer-blue);
            color: white;
            padding: 3px 10px;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
            font-size: 1.1em;
        }

        .question-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            font-weight: bold;
            font-size: 1.3em;
        }

        .nav-arrow {
            background-color: #3b82f6;
            color: white;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            font-size: 1.4em;
            user-select: none;
        }

        .options-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
            margin-bottom: 25px;
            font-size: 1.1em;
        }

            .options-grid p {
                margin: 0;
            }

        .answer-selection {
            border-top: 1px solid var(--border-color);
            padding-top: 25px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

            .answer-selection div {
                display: flex;
                align-items: center;
                gap: 12px;
                font-size: 1.1em;
            }

            .answer-selection input {
                margin-right: 8px;
                width: 20px;
                height: 20px;
            }

        .action-buttons {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            padding-top: 25px;
            margin-top: 25px;
            border-top: 1px solid var(--border-color);
        }

            .action-buttons .main-actions {
                display: flex;
                flex-grow: 1;
                gap: 12px;
            }

            .action-buttons button {
                padding: 12px 20px;
                border: 1px solid #ccc;
                border-radius: 6px;
                cursor: pointer;
                font-weight: bold;
                font-size: 15px;
            }

        .btn-save-next {
            background-color: var(--answered-bg);
            color: white;
            border-color: var(--answered-bg);
        }

        .btn-clear {
            background-color: var(--white-bg);
            color: var(--text-color);
        }

        .btn-save-mark {
            background-color: var(--save-mark-review-bg);
            color: white;
            border-color: var(--save-mark-review-bg);
        }

        .btn-mark-review {
            background-color: var(--marked-review-bg);
            color: white;
            border-color: var(--marked-review-bg);
        }

        .btn-nav {
            background-color: var(--white-bg);
            color: var(--text-color);
        }

        .btn-submit {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
            padding: 12px 35px;
            margin-left: auto;
            font-size: 16px;
        }

        .language-selector {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--border-color);
            border-radius: 5px;
            font-size: 1.1em;
        }

        .palette-legend {
            list-style: none;
            padding: 0;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px 15px;
            font-size: 1.1em;
        }

            .palette-legend li {
                display: flex;
                align-items: center;
            }

                .palette-legend li.full-width {
                    grid-column: 1 / -1;
                }

        .legend-box {
            width: 36px;
            height: 36px;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            margin-right: 15px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            position: relative;
        }

            .legend-box .text-skew {
                display: inline-block;
            }

        .legend-not-visited {
            background-color: var(--not-visited-bg);
            border: 1px solid #ccc;
            color: #000;
            border-radius: 4px;
        }

        .legend-not-answered {
            background-color: var(--not-answered-bg);
        }

            .legend-not-answered::before {
                content: '';
                position: absolute;
                top: 0;
                left: -18px;
                width: 0;
                height: 0;
                border-style: solid;
                border-width: 18px 18px 18px 0;
                border-color: transparent var(--not-answered-bg) transparent transparent;
            }

        .legend-answered {
            background-color: var(--answered-bg);
            transform: skew(-20deg);
        }

            .legend-answered .text-skew {
                transform: skew(20deg);
            }

        .legend-marked {
            background-color: var(--marked-review-bg);
            border-radius: 50%;
        }

        .legend-answered-marked {
            background-color: var(--marked-review-bg);
            border-radius: 50%;
        }

            .legend-answered-marked::after {
                content: '';
                position: absolute;
                bottom: -2px;
                right: -4px;
                width: 16px;
                height: 16px;
                background-color: var(--answered-bg);
                border: 2px solid white;
                border-radius: 3px;
            }

        .question-grid {
            display: grid;
            grid-template-columns: repeat(8, 1fr);
            gap: 10px;
            margin: 20px 0;
        }

        .q-num {
            width: 40px;
            height: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 5px;
            cursor: pointer;
            font-size: 15px;
        }

        .q-not-answered {
            background-color: var(--not-answered-bg);
            color: white;
        }

        .q-not-visited {
            background-color: var(--not-visited-bg);
            color: var(--not-visited-text);
            border: 1px solid #ccc;
        }

        .sidebar-nav-arrows {
            text-align: center;
            user-select: none;
        }

            .sidebar-nav-arrows span {
                display: inline-block;
                margin: 0 12px;
                cursor: pointer;
                font-size: 1.7em;
                color: #555;
            }

        footer {
            text-align: center;
            padding: 20px;
            background-color: var(--white-bg);
            font-size: 1em;
            border-top: 1px solid var(--border-color);
            margin-top: 25px;
        }
    </style>
</head>
