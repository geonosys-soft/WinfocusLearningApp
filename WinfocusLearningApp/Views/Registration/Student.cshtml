                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Parent's Email ID</label>
                                <input type="email" class="form-input" id="parentEmail">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Occupation</label>
                                <input type="text" class="form-input" id="parentOccupation">
                            </div>
