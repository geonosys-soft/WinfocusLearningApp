                                <label class="form-label">Home Address</label>
                                <input type="text" class="form-input" id="homeAddress">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Location</label>
                                <input type="text" class="form-input" id="permanentLocation">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Post Office</label>
                                <input type="text" class="form-input" id="postOffice">
                            </div>
                            <div class="form-group">
                                <label class="form-label">District</label>
                                <input type="text" class="form-input" id="district">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">State</label>
                            <input type="text" class="form-input" id="state" style="max-width: 300px;">
                        </div>
